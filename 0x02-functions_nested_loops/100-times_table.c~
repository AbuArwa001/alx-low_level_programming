#include "main.h"
/**
* procces - procces a times table
* @p: product of i and j
* @i: column of the table
* @j: row of the table
*/
void procces(int p, int i, int j, int n)
{
	for (j = 0; j <= n; j++)
	{	p = i * j;
		if (p > n)
		{	_putchar((p / 10) + '0');
			_putchar((p % 10)  + '0');
			if (j == n)
			{	_putchar('\n');
				continue;
			}
			_putchar(',');
			_putchar(' ');
		}
		else
		{	_putchar(p + '0');
			if (j == n)
			{	_putchar('\n');
				continue;
			}
			if (p == 0 || (p == 8 && i == 1))
			{	_putchar(',');
				_putchar(' ');
				_putchar(' ');
				continue;
			}
			if (i >= (n/2) +1 || p >= n - 1)
			{	_putchar(',');
				_putchar(' ');
				continue;
			}
			_putchar(',');
			_putchar(' ');
			_putchar(' ');
		}
	}
}
/**
 * times_table - prints 9 times table
 *
 *
 *
 *
 *
 */

void print_times_table(int n)
{	int i = 0, j = 0, p = 0;

	if (n < 0 || n > 15)
	{
		return;
	}
	else if(n > 0 && < 10)
	{
		for (; i <= n; i++)
		{	procces(p, i, j, n);
		}
	}else if(n >= 10)
	{
		
	}
}
