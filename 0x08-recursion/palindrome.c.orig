int palindrome(char *s1, char *s2,int len, int len2)
{
  char chck = s2[len2];

  if(*s1 == '\0' && chck != '\0')
  {
    return (0);
  }
  if (*s1 != chck )
  {
    return (0);
  }
  if (*s1 == '\0' && chck == '\0')
  {
    return (1);
  }
  return(palindrome(s1+1, s2,len,len2-1));
}
int is_palindrome(char *s)
{
   int len =  _strlen_recursion(s)-1;
  return (palindrome(s,s,len,len));

}
